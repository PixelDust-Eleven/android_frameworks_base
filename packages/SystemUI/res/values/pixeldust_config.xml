<resources>

    <!-- Should we listen for fingerprints when the screen is off?  Devices
         with a rear-mounted sensor want this, but certain devices have
         the sensor embedded in the power key and listening all the time
         causes a poor experience. -->
    <bool name="config_fingerprintWakeAndUnlock">true</bool>

    <!-- Burn in protection -->
    <bool name="config_statusBarBurnInProtection">true</bool>
    <integer name="config_shift_interval">60</integer>

    <!-- Whether to use the mask for the quicksettings icons-->
    <bool name="config_useMaskForQs">true</bool>

    <!-- absolute maximum for qs columns 
         does NOT mean this value can be reached
         there is always check that uses the current available space
         to get the maximal number to be used
         so this value is used only in the config ui -->
    <integer name="quick_settings_num_columns_port_max">8</integer>
    <integer name="quick_settings_num_columns_land_max">9</integer>

    <!-- Color of the FOD view -->
    <color name="config_fodColor">#00ff00</color>

</resources>

